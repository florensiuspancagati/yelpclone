<% if(success_msg && success_msg.length > 0) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %> 
<!-- This code will display a success message if the variable success_msg is set and has a length greater than 0. -->

<% if(error_msg && error_msg.length > 0) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error_msg %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<!-- This code will display a success message if the variable error_msg is set and has a length greater than 0. -->